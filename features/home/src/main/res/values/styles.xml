<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewAppearance.PokemonElement" parent="Widget.AppCompat.TextView">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/extra_extra_small</item>
        <item name="autoSizeMaxTextSize">@dimen/corps</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_pokemon_element</item>
        <item name="android:paddingStart">@dimen/spacer_2</item>
        <item name="android:paddingEnd">@dimen/spacer_2</item>
        <item name="android:paddingTop">@dimen/spacer_1</item>
        <item name="android:paddingBottom">@dimen/spacer_1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewAppearance.PokemonElement.Ability" parent="TextViewAppearance.PokemonElement">

    </style>

    <style name="TextViewAppearance.PokemonElement.Ability.Hidden" parent="TextViewAppearance.PokemonElement.Ability">
        <item name="android:background">@drawable/background_pokemon_element_hidden</item>
    </style>

</resources>